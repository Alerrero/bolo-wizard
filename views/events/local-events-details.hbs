<div class="row">
    <div class="col-xs-12 col-md-7 local-event-page">
        <div class="container">
            <div class="row artist-info justify-content-center">
                <div class="col-6">
                    <img src="{{localEvent.img}}" alt="Event img">
                </div>
                <div class="col-6">
                    <h4 class="text-center">{{localEvent.title}}</h4>
                    <p><span>Fecha</span>: {{localEvent.date}}</p>
                    <p><span>Sala/Local</span>: {{localEvent.place}}</p>
                    <p><span>Genero</span>: {{localEvent.artist.genre}}</p>
                </div>
            </div>
            <p><span>Direcci√≥n</span>: {{place.formatted_address}}</p>
            <figure id="local-map"></figure>
        </div>
    </div>

    <div class="col-xs-12 col-md-5 tracks-preview tm-event-page">
        <div class="container">
            <div class="row flex-column align-items-center">
                <img src="{{localEvent.artist.img}}" alt="Artist img">
            </div>
        </div>
    </div>
</div>







{{#each tracks}}
{{#if preview_url}}
<h4>{{name}}</h4>
<audio src="{{preview_url}}" controls></audio>
{{/if}}
{{/each}}

<a href="{{localEvent.artist.spotifyURL}}" target="_blank">Link</a>

<a href="{{localEvent.artist.youtubeChannel}}">Youtube Channel Link</a>

<figure id="local-map"></figure>
<p>{{place.formatted_address}}</p>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/javascripts/local-map-config.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{mapsKey}}&callback=initMap"></script>
